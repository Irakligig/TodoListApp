@model IEnumerable<TodoListApp.WebApi.Models.TodoTaskModel>
@{
    ViewData["Title"] = $"Tasks tagged with '{ViewBag.TagName}'";
}

<!-- ADD ALERT SECTION -->
<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-controller="Tag" asp-action="AllTags" class="btn btn-secondary">‚Üê Back to Tags</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Due Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model)
                            {
                                <tr>
                                    <td>@task.Name</td>
                                    <td>@(string.IsNullOrEmpty(task.Description) ? "No description" : task.Description)</td>
                                    <td>@(task.DueDate?.ToString("yyyy-MM-dd") ?? "No due date")</td>
                                    <td>
                                        @if (task.IsCompleted)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="TodoTask" asp-action="Details" asp-route-listId="@task.TodoListId" asp-route-id="@task.Id"
                                           class="btn btn-sm btn-outline-primary">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No tasks found with this tag</h4>
            <p class="text-muted">Try selecting a different tag or create new tasks with this tag.</p>
            <a asp-controller="Tag" asp-action="AllTags" class="btn btn-primary">Browse All Tags</a>
        </div>
    }
</div>