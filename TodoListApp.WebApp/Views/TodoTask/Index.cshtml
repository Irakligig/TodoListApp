@model IEnumerable<TodoListApp.WebApi.Models.TodoTaskModel>
@{
    var listId = ViewBag.ListId;
    ViewData["Title"] = "Tasks";
}

<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h2 class="mb-0 text-gradient">Tasks</h2>
            <a asp-action="Create" asp-route-listId="@listId" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Create New Task
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Title</th>
                            <th>Status</th>
                            <th>Due Date</th>
                            <th class="pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model)
                        {
                            bool isOverdue = task.DueDate.HasValue && task.DueDate.Value < DateTime.Now && !task.IsCompleted;
                            string rowClass = isOverdue ? "table-warning" : "";

                            <tr class="@rowClass">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            @if (task.IsCompleted)
                                            {
                                                <i class="fas fa-check-circle text-success fs-5"></i>
                                            }
                                            else if (isOverdue)
                                            {
                                                <i class="fas fa-exclamation-circle text-warning fs-5"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-clock text-secondary fs-5"></i>
                                            }
                                        </div>
                                        <div>
                                            <span class="fw-semibold">@task.Name</span>
                                            @if (!string.IsNullOrEmpty(task.Description))
                                            {
                                                <p class="text-muted small mb-0 mt-1">@(task.Description.Length > 60 ? task.Description.Substring(0, 60) + "..." : task.Description)</p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (task.IsCompleted)
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            <i class="fas fa-check me-1"></i>Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill">
                                            <i class="fas fa-clock me-1"></i>Pending
                                        </span>
                                    }
                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger rounded-pill mt-1">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Overdue
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (task.DueDate.HasValue)
                                    {
                                        <div class="d-flex flex-column">
                                            <span class="fw-semibold @(isOverdue ? "text-danger" : "text-dark")">
                                                @task.DueDate.Value.ToString("MMM dd, yyyy")
                                            </span>
                                            <small class="text-muted">
                                                @task.DueDate.Value.ToString("hh:mm tt")
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No due date</span>
                                    }
                                </td>
                                <td class="pe-4">
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-listId="@task.TodoListId" asp-route-id="@task.Id"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>Details
                                        </a>
                                        <a asp-action="Edit" asp-route-listId="@task.TodoListId" asp-route-id="@task.Id"
                                           class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <form asp-action="Delete" method="post" style="display:inline">
                                            <input type="hidden" name="listId" value="@task.TodoListId" />
                                            <input type="hidden" name="id" value="@task.Id" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this task?')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="fas fa-inbox fa-3x mb-3"></i>
                                        <h5>No tasks available</h5>
                                        <p>Create your first task to get started!</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(79, 70, 229, 0.05);
    }
</style>