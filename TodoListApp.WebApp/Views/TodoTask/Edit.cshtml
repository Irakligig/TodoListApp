@model TodoListApp.WebApi.Models.TaskWithTagsViewModel
@{
    ViewData["Title"] = "Edit Task";
    var users = ViewBag.Users as List<TodoListApp.WebApi.Models.TodoUserModel> ?? new();
}

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TodoListId" />
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IsCompleted"></label>
        <select asp-for="IsCompleted" class="form-control">
            <option value="false">Pending</option>
            <option value="true">Completed</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AssignedUserId"></label>
        <select asp-for="AssignedUserId" class="form-control">
            <option value="">-- Select User --</option>
            @foreach (var user in users)
            {
                <option value="@user.Id">@user.FullName</option>
            }
        </select>
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Tags:</label>
        <ul class="list-inline">
            @foreach (var tag in Model.Tags)
            {
                <li class="list-inline-item badge bg-info text-dark me-1">@tag</li>
            }
        </ul>
        <input type="text" name="NewTag" value="@Model.NewTag" class="form-control mt-1" placeholder="Add new tag" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-listId="@Model.TodoListId" class="btn btn-secondary">Cancel</a>
</form>

<hr />

<h4>Comments</h4>

<form asp-action="AddComment" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="listId" value="@Model.TodoListId" />
    <input type="hidden" name="taskId" value="@Model.Id" />
    <textarea name="text" class="form-control mb-2" placeholder="Add a comment"></textarea>
    <button type="submit" class="btn btn-primary btn-sm">Add Comment</button>
</form>

@foreach (var comment in Model.Comments)
{
    <div class="border p-2 mb-2 rounded">
        <strong>@comment.UserId</strong>
        <small>@comment.CreatedAt.ToLocalTime().ToString("g")</small>
        <p>@comment.Text</p>

        <form asp-action="EditComment" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="listId" value="@Model.TodoListId" />
            <input type="hidden" name="taskId" value="@Model.Id" />
            <input type="hidden" name="commentId" value="@comment.Id" />
            <input type="text" name="text" value="@comment.Text" class="form-control d-inline w-auto" />
            <button type="submit" class="btn btn-sm btn-secondary">Edit</button>
        </form>

        <form asp-action="DeleteComment" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="listId" value="@Model.TodoListId" />
            <input type="hidden" name="taskId" value="@Model.Id" />
            <input type="hidden" name="commentId" value="@comment.Id" />
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}