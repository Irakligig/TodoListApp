@model TodoListApp.WebApi.Models.TaskWithTagsViewModel
@{
    ViewData["Title"] = "Edit Task";
    var users = ViewBag.Users as List<TodoListApp.WebApi.Models.TodoUserModel> ?? new();
}

<!-- ADD ALERT SECTION -->
<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Task
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Main Task Edit Form -->
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="TodoListId" />
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-semibold">Task Title</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                                    <input asp-for="DueDate" type="date" class="form-control" />
                                    <span asp-validation-for="DueDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IsCompleted" class="form-label fw-semibold">Status</label>
                                    <select asp-for="IsCompleted" class="form-control">
                                        <option value="false">Pending</option>
                                        <option value="true">Completed</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AssignedUserId" class="form-label fw-semibold">Assign To</label>
                                    <select asp-for="AssignedUserId" class="form-control">
                                        <option value="">-- Unassigned --</option>
                                        @foreach (var user in users)
                                        {
                                            <option value="@user.Id">@user.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                            <a asp-action="Details" asp-route-listId="@Model.TodoListId" asp-route-id="@Model.Id"
                               class="btn btn-outline-info">
                                <i class="fas fa-comments me-1"></i>View Comments
                            </a>
                            <a asp-action="Index" asp-route-listId="@Model.TodoListId" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </form>

                    <!-- Tags Section - COMPLETELY OUTSIDE the main form -->
                    <div class="mt-4 pt-4 border-top">
                        <div class="form-group">
                            <label class="form-label fw-semibold">Tags</label>
                            <div class="mb-2">
                                @if (Model.Tags.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var tag in Model.Tags)
                                        {
                                            <span class="badge bg-secondary text-white">
                                                @tag
                                                <form asp-controller="Tag" asp-action="RemoveTag" method="post" style="display:inline">
                                                    <input type="hidden" name="taskId" value="@Model.Id" />
                                                    <input type="hidden" name="listId" value="@Model.TodoListId" />
                                                    <input type="hidden" name="tagName" value="@tag" />
                                                    <button type="submit" class="btn btn-sm btn-link text-white p-0 ms-1" style="text-decoration: none;">
                                                        Ã—
                                                    </button>
                                                </form>
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No tags added</span>
                                }
                            </div>

                            <!-- Separate form for adding tags -->
                            <form asp-controller="Tag" asp-action="AddTag" method="post" class="d-flex gap-2">
                                <input type="hidden" name="taskId" value="@Model.Id" />
                                <input type="hidden" name="listId" value="@Model.TodoListId" />
                                <input type="text" name="newTag" value="@Model.NewTag" class="form-control" placeholder="Add new tag" />
                                <button type="submit" class="btn btn-outline-primary">Add Tag</button>
                            </form>
                            <small class="form-text text-muted">Add tags separately without saving the main form.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}