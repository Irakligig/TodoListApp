@model TodoListApp.WebApi.Models.TodoTaskModel
@{
    ViewData["Title"] = "Create Task";
}

<!-- ADD ALERT SECTION -->
<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<h2>Create Task</h2>

<form asp-action="Create" method="post">
    @* Anti-forgery token is required because controller uses [ValidateAntiForgeryToken] *@
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TodoListId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="IsCompleted"></label>
        @* Use actual boolean values for option values so model binder can parse them *@
        <select asp-for="IsCompleted" class="form-control">
            <option value="false">Pending</option>
            <option value="true">Completed</option>
        </select>
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-route-listId="@Model.TodoListId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @* Client-side validation helpers if you have them enabled *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
