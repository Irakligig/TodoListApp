@model TodoListApp.WebApi.Models.TodoTaskModel

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Completed" : "Pending")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-listId="@Model.TodoListId" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-route-listId="@Model.TodoListId">Back to List</a>
</div>
