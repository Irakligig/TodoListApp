@model TodoListApp.WebApi.Models.TaskWithTagsViewModel

@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Completed" : "Pending")</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">
            <ul class="list-inline">
                @foreach (var tag in Model.Tags)
                {
                    <li class="list-inline-item">
                        <a asp-controller="Tag" asp-action="TasksByTag" asp-route-tagName="@tag"
                           class="badge bg-info text-dark text-decoration-none">
                            @tag
                        </a>

                        <form asp-controller="Tag" asp-action="RemoveTag" method="post" style="display:inline">
                            <input type="hidden" name="taskId" value="@Model.Id" />
                            <input type="hidden" name="listId" value="@Model.TodoListId" />
                            <input type="hidden" name="tagName" value="@tag" />
                            <button type="submit" class="btn btn-sm btn-link text-danger p-0 ms-1">Ã—</button>
                        </form>
                    </li>
                }
            </ul>

            <form asp-controller="Tag" asp-action="AddTag" method="post" class="mt-2 d-flex gap-2">
                <input type="hidden" name="taskId" value="@Model.Id" />
                <input type="hidden" name="listId" value="@Model.TodoListId" />
                <input type="text" name="newTag" placeholder="New tag" value="@Model.NewTag" class="form-control form-control-sm" />
                <button type="submit" class="btn btn-primary btn-sm">Add</button>
            </form>
        </dd>

    </dl>
</div>

<div class="mt-4">
    <h4>Comments</h4>
    <a asp-action="Edit"
       asp-route-listId="@Model.TodoListId"
       asp-route-id="@Model.Id"
       class="btn btn-outline-primary btn-sm">
        View Comments
    </a>
</div>


<div class="mt-3">
    <a asp-action="Edit" asp-route-listId="@Model.TodoListId" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">Edit</a>
    <a asp-action="Index" asp-route-listId="@Model.TodoListId" class="btn btn-link btn-sm">Back to List</a>
</div>
